<div class="home">
  <h1>Typing Teachers Treasure Trove</h1>
  <%= image_tag 'keyboard.svg', alt: 'keyboard.svg', width: '250' %>
  <% if local_assigns[:errors] %>
    <%= errors %>
  <% end %>
  <%= form_tag(search_path, :method => "get",   
    class: 'search-form') do %>
    <div class="">
      <%= search_field_tag :search, params[:search], placeholder: "Search", class: "" %>
      <div class="input-group-btn">
        <%= button_tag "Search", :class => '',:name => nil%>
      </div>
    </div>
  <% end %>
</div>
